@model Cars.Models.log

@{
    ViewBag.Title = "carlog";
}

<div class="breadcrumbs">
    <div class="col-sm-4">
        <div class="page-header float-left">
            <div class="page-title">
                <h1>Complete For Car Lease</h1>
            </div>
        </div>
    </div>

    <div class="col-sm-8">
        <div class="page-header float-right">
            <div class="page-title">
                <ol class="breadcrumb text-right">
                    <li><a href="#">Dashboard</a></li>
                    <li class="active">Lease Car</li>
                </ol>
            </div>
        </div>
    </div>
</div>



<div class="col-sm-12">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <fieldset>
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <strong>Enter Logging</strong> Details
                </div>
                <div class="card-body card-block">
                    <form action="" method="post" class="form-horizontal">

                        <div class="row form-group">
                            <div class="col col-md-3"><label for="customername" class=" form-control-label">Customer's Name</label></div>
                            <div class="col-12 col-md-9"><input type="text" id="customername" name="customername" placeholder="Enter Customer's name..." class="form-control"></div>
                        </div>

                        <div class="row form-group">
                            <div class="col col-md-3"><label for="customeremail" class=" form-control-label">Customer's Email</label></div>
                            <div class="col-12 col-md-9"><input type="text" id="customeremail" name="customeremail" placeholder="Enter Customer's email..." class="form-control"></div>
                        </div>

                        <div class="row form-group">
                            <div class="col col-md-3"><label for="customertel" class=" form-control-label">Customer's Phone Number</label></div>
                            <div class="col-12 col-md-9"><input type="text" id="customertel" name="customertel" placeholder="Enter Customer's phone..." class="form-control"></div>
                        </div>

                        <div class="row form-group">
                            <div class="col col-md-3"><label for="leasedate" class=" form-control-label">Lease Date</label></div>
                            <div class="col-12 col-md-9"><input type="text" id="leasedate" name="leasedate" placeholder="Enter lease date..." class="form-control"></div>
                        </div>

                        <div class="row form-group">
                            <div class="col col-md-3"><label for="retudate" class=" form-control-label">Return Date</label></div>
                            <div class="col-12 col-md-9"><input type="text" id="retudate" name="retudate" placeholder="Enter return date..." class="form-control"></div>
                        </div>
                    </form>
                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-primary btn-sm">
                        <i class="fa fa-dot-circle-o"></i> Submit
                    </button>
                    <a href="~/home/availablecars">
                        <button type="reset" class="btn btn-danger btn-sm">
                            <i class="fa fa-ban"></i> Back
                        </button>
                    </a>
                </div>
            </div>
    </fieldset>
        
        
        
        
