@model Cars.Models.car

@{
    ViewBag.Title = "editcar";
}

<div class="breadcrumbs">
    <div class="col-sm-4">
        <div class="page-header float-left">
            <div class="page-title">
                <h1>Edit Car</h1>
            </div>
        </div>
    </div>

    <div class="col-sm-8">
        <div class="page-header float-right">
            <div class="page-title">
                <ol class="breadcrumb text-right">
                    <li><a href="#">Dashboard</a></li>
                    <li class="active">Edit car</li>
                </ol>
            </div>
        </div>
    </div>
</div>



<div class="col-sm-12">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        <fieldset>
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <strong>Enter Car</strong> Details
                    </div>
                    <div class="card-body card-block">
                        <form action="" method="post" class="form-horizontal">

                            <div class="row form-group">
                                <div class="col col-md-3"><label for="carname" class=" form-control-label">Car name</label></div>
                                <div class="col-12 col-md-9"><input type="text" id="carname" name="carname" placeholder="Enter Car name..." class="form-control"></div>
                            </div>

                            <div class="row form-group">
                                <div class="col col-md-3"><label for="file-input" class=" form-control-label">File input</label></div>
                                <div class="col-12 col-md-9"><input type="file" id="file-input" name="carimage" class="form-control-file"></div>
                            </div>

                            <div class="row form-group">
                                <div class="col col-md-3"><label for="price" class=" form-control-label">Price per day</label></div>
                                <div class="col-12 col-md-9"><input type="text" id="price" name="price" placeholder="Enter price..." class="form-control"></div>
                            </div>
                        </form>
                    </div>
                    <div class="card-footer">
                        <button type="submit" class="btn btn-primary btn-sm">
                            <i class="fa fa-dot-circle-o"></i> Save
                        </button>
                        <button type="reset" class="btn btn-danger btn-sm">
                            <i class="fa fa-ban"></i> @Html.ActionLink("Back", "carindex")
                        </button>
                        <a href="~/home/carindex">
                            <button type="reset" class="btn btn-danger btn-sm">
                                <i class="fa fa-ban"></i> Back
                            </button>
                        </a>
                    </div>
                </div>
        </fieldset>

    }
</div>
























