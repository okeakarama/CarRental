@model IEnumerable<Cars.Models.car>

@{
    ViewBag.Title = "carindex";
}

<div class="breadcrumbs">
    <div class="col-sm-4">
        <div class="page-header float-left">
            <div class="page-title">
                <h1>Car List</h1>
            </div>
        </div>
    </div>

    <div class="col-sm-8">
        <div class="page-header float-right">
            <div class="page-title">
                <ol class="breadcrumb text-right">
                    <li><a href="#">Dashboard</a></li>
                    <li class="active">Car List</li>
                </ol>
            </div>
        </div>
    </div>
</div>


<div class="col-sm-12">
    <p>
        @Html.ActionLink("Create New", "createcar")
    </p>


    @foreach (var item in Model)
    {

        <div class="col-md-4">

            <div class="card">
                <img class="card-img-top" src="~/images/@(System.IO.Path.GetFileName(item.carimage))" alt="@item.carimage" style="height:200px; width:100%">

                <div class="card-body">
                    <h4 class="card-title mb-3">@item.carname</h4> <small>@item.status</small>
                    <p class="card-text">N @item.price <small>per day</small></p>
                    @Html.ActionLink("Edit", "Edit", new { id = item.carid }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.carid })
                </div>
                @*<div class="float-right">
                    @Html.ActionLink("Edit", "Edit", new { id = item.carid }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.carid })
                </div>*@
            </div>

        </div>

    }
</div>


